# Application Configuration
APP_NAME=Laravel
APP_ENV=local
APP_KEY=                           # Generate with 'php artisan key:generate'
APP_DEBUG=true                     # Set to false in production
APP_URL=http://localhost

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP Server Configuration
PHP_CLI_SERVER_WORKERS=4

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug                    # Options: debug, info, notice, warning, error, critical, alert, emergency

# Database Configuration
DB_CONNECTION=sqlite               # Options: mysql, pgsql, sqlite, sqlsrv
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# Session Configuration
SESSION_DRIVER=database           # Options: file, cookie, database, apc, memcached, redis, dynamodb, array
SESSION_LIFETIME=120              # Session lifetime in minutes
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting, Storage, and Queue
BROADCAST_CONNECTION=reverb       # Options: pusher, ably, redis, log, null, reverb
FILESYSTEM_DISK=local            # Options: local, public, s3, sftp
QUEUE_CONNECTION=database        # Options: sync, database, beanstalkd, sqs, redis, null

# Cache Configuration
CACHE_STORE=database             # Options: apc, array, database, file, memcached, redis, dynamodb, null
# CACHE_PREFIX=

# Memcached Configuration
MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis            # Options: phpredis, predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# -------------------------
# Option 1: For local development (logs emails instead of sending)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Option 2: For production with Mailgun (free tier)
# MAIL_MAILER=mailgun
# MAIL_HOST=smtp.mailgun.org
# MAIL_PORT=587
# MAIL_USERNAME=postmaster@yourdomain.com
# MAIL_PASSWORD=your_mailgun_password
# MAILGUN_DOMAIN=yourdomain.com
# MAILGUN_SECRET=your_mailgun_secret_key
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="${APP_NAME}"

# Option 3: For production with SendGrid (free tier)
# MAIL_MAILER=smtp
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key
# MAIL_FROM_ADDRESS="noreply@yourdomain.com"
# MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Reverb Configuration for Real-Time Features
# ------------------------------------------
# Get these values by creating a Reverb app at https://reverb.laravel.com
REVERB_APP_ID=your_reverb_app_id
REVERB_APP_KEY=your_reverb_app_key
REVERB_APP_SECRET=your_reverb_app_secret
REVERB_HOST="localhost"
REVERB_PORT=8080
REVERB_SCHEME=http

# Vite Environment Variables for Reverb
# These reference the Reverb configuration above
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# Application Features
# ------------------
# Enable or disable user registration (true/false)
ENABLE_REGISTRATION=false
